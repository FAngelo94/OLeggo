<Page xmlns="http://schemas.nativescript.org/tns.xsd" shownModally="onShownModally" backgroundColor="rgba(248,138,76,0.8)" style="margin:0;padding:0;width:100%;height:100%;">
   
    <StackLayout orientation="vertical" style="padding:150 0 10 0;color: white;width:100%;height:100%;">

        <StackLayout class="line">
        <Label text="Update progress" class="progress" style="horizontal-align: center;"/>
        </StackLayout>

        <Label text="{{Book.title}}" class="BookTitle" style="horizontal-align: center;"/>
        <Label text="{{Book.author}}" class="BookAuthor" style="horizontal-align: center;"/>
        <Label text="I am on page: " class="BookTitle" />
        <TextField class="input" id="newBookmark" hint="{{Book.bookmark}}" keyboardType="number"/>

        <StackLayout orientation="horizontal" style="horizontal-align: center;">
            <Label text="{{Book.bookmark}}"/>
            <Label text="/"/>
            <Label text="{{Book.pages}}" style="padding:0 10 0 0"/>
            <Progress value="{{Book.progress}}" width="50%"/>
            <Label text="{{Book.bookmark}}" style="padding:0 0 20 10"/>
            <Label text="%"/>
            
        </StackLayout>
        <Button text="I have finished the book"  tap="onFinishButtonTap"/> 
        <Button text="Update Progress" tap="onSetButtonTap"/>

    </StackLayout>
</Page>